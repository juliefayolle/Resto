{% extends 'admin.html.twig' %}
{% block body %}
    <h2>Liste de menus</h2>
    <button type="button" class="create btn btn-black"><a href="{{ path('admin_menu_new') }}">Ajouter un nouveau menu</a></button>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Content</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.name }}</td>
                <td>{{ menu.content|raw }}</td>
                <td>{{ menu.image }}</td>
                <td>{{ menu.price }} â‚¬</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_menu_show', { 'id': menu.id }) }}"><i class="fas fa-eye"></i>  show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_menu_edit', { 'id': menu.id }) }}"><i class="far fa-edit"></i>  edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
